{
  "name": "quartz-cli",
  "version": "0.2.4",
  "description": "AI-powered Git workflow automation for humans.Streamline your development workflow with intelligent commit messages, pull requests, and code reviews",
  "type": "module",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "bin": {
    "quartz": "dist/index.js"
  },
  "scripts": {
    "add-path-comments": "bun run scripts/add-path-comments.ts",
    "cli": "bun run app/index.ts",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "start": "bun run app/index.ts",
    "build": "bun build ./app/index.ts --compile --minify --sourcemap --outfile dist/quartz",
    "build:linux": "bun build ./app/index.ts --compile --minify --sourcemap --target=bun-linux-x64 --outfile dist/quartz-linux-x64",
    "build:linux-arm": "bun build ./app/index.ts --compile --minify --sourcemap --target=bun-linux-arm64 --outfile dist/quartz-linux-arm64",
    "build:darwin": "bun build ./app/index.ts --compile --minify --sourcemap --target=bun-darwin-arm64 --outfile dist/quartz-darwin-arm64",
    "build:darwin-x64": "bun build ./app/index.ts --compile --minify --sourcemap --target=bun-darwin-x64 --outfile dist/quartz-darwin-x64",
    "build:windows": "bun build ./app/index.ts --compile --minify --sourcemap --target=bun-windows-x64 --outfile dist/quartz-windows-x64",
    "build:all": "bun run build:linux && bun run build:linux-arm && bun run build:darwin && bun run build:darwin-x64 && bun run build:windows",
    "dev": "bun --watch app/index.ts",
    "release": "bun run build && npm publish",
    "release:dry": "bun run build && npm publish --dry-run",
    "prepublishOnly": "bun run build",
    "prepare": "husky",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "format": "biome format .",
    "format:fix": "biome format . --write",
    "check": "biome check .",
    "check:fix": "biome check . --write",
    "version": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "postversion": "git push --follow-tags"
  },
  "files": [
    "dist",
    "app",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/QuartzKazoku/Quartz-CLI.git"
  },
  "bugs": {
    "url": "https://github.com/QuartzKazoku/Quartz-CLI/issues"
  },
  "homepage": "https://github.com/QuartzKazoku/Quartz-CLI#readme",
  "keywords": [
    "github-action",
    "code-review",
    "quartz",
    "openai",
    "automation",
    "cli",
    "commit-message",
    "pull-request",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "@types/minimist": "^1.2.5",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.2",
    "consola": "^3.4.2",
    "enquirer": "^2.4.1",
    "execa": "^9.6.0",
    "figlet": "^1.9.3",
    "gradient-string": "^3.0.0",
    "jsonc-parser": "^3.3.1",
    "minimist": "^1.2.8",
    "openai": "^4.28.0",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^11.1.0",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "@semantic-release/npm": "^11.0.2",
    "@semantic-release/release-notes-generator": "^12.1.0",
    "@types/node": "^24.9.1",
    "@vitest/coverage-v8": "^4.0.4",
    "@vitest/ui": "^4.0.4",
    "biome": "^0.3.3",
    "bunup": "^0.15.13",
    "conventional-changelog-conventionalcommits": "^7.0.2",
    "happy-dom": "^20.0.8",
    "husky": "^9.1.7",
    "semantic-release": "^23.0.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2",
    "vitepress": "^2.0.0-alpha.12",
    "vitepress-plugin-tabs": "^0.7.3",
    "vitest": "^4.0.4"
  }
}
