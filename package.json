{
  "name": "quartz-cli",
  "version": "0.0.1",
  "description": "AI-powered Git workflow automation for humans.Streamline your development workflow with intelligent commit messages, pull requests, and code reviews",
  "type": "module",
  "module": "index.ts",
  "main": "index.ts",
  "bin": {
    "quartz": "app/index.ts"
  },
  "scripts": {
    "add-path-comments": "bun run scripts/add-path-comments.ts",
    "review": "bun run scripts/review.ts",
    "cli": "bun run app/index.ts",
    "test": "bun test",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:specific": "bun test",
    "start": "bun run app/index.ts",
    "build": "bun build ./app/index.ts --outdir ./dist --target bun",
    "dev": "bun --watch app/index.ts",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "release": "bun run build && npm publish",
    "prepublishOnly": "bun run build",
    "prepare": "husky",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --write",
    "format": "biome format .",
    "format:fix": "biome format . --write",
    "check": "biome check .",
    "check:fix": "biome check . --write"
  },
  "files": [
    "dist",
    "app",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/QuartzKazoku/Quartz-CLI.git"
  },
  "bugs": {
    "url": "https://github.com/QuartzKazoku/Quartz-CLI/issues"
  },
  "homepage": "https://github.com/QuartzKazoku/Quartz-CLI#readme",
  "keywords": [
    "github-action",
    "code-review",
    "quartz",
    "openai",
    "automation",
    "cli",
    "commit-message",
    "pull-request",
    "bun"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@octokit/rest": "^20.0.2",
    "boxen": "^8.0.1",
    "chalk": "^5.6.2",
    "cli-progress": "^3.12.0",
    "commander": "^14.0.2",
    "consola": "^3.4.2",
    "enquirer": "^2.4.1",
    "figlet": "^1.9.3",
    "gradient-string": "^3.0.0",
    "openai": "^4.28.0",
    "ora": "^9.0.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "biome": "^0.3.3",
    "bun-types": "latest",
    "husky": "^9.1.7",
    "vitepress": "^2.0.0-alpha.12",
    "vitepress-plugin-tabs": "^0.7.3"
  },
  "packageManager": "bun@1.0.0"
}
